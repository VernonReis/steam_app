<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title></title>
  </head>
  <body>

  <div id="topBar">
    <div id="pageTitle">
      <h1>My Games</h1>
    </div>
    <div id="logout">
      <a href="/user/logout">Logout</a>
    </div>
  </div>

  <div id="container">


  <nav>

    <form action="/user/games/new" method="get">
      <input class="buttonGreen" type="submit" value="Add Game to Library">
    </form>

  </nav>

  <div id="entryContainer">
    <% if (hasGames) { %>
      <% for (game of games) { %>
        <div class="entry">
          <p><%= game.title %></p>
          <div class="gameImage">
            <% if (game.img != "") { console.log("baggy"); %>
            <img src="<%= game.img %>" >
            <% } else { %>
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/450px-No_image_available.svg.png">
            <% } %>
            <% console.log(typeof game.title) %>
          </div>
        

          <form action="/user/games/<%= game._id %>" method="get">
            <input class="buttonGreen" type="submit" value="View Details">
          </form>

        </div>
      <% } %>
    <% } %>
  </div>
  </div>  
  </body>
</html>