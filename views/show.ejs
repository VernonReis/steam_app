<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title></title>
  </head>
  <body>

  <div id="topBar">
    <div id="pageTitle">
      <h1>User Games</h1>
    </div>
    <div id="logout">
      <a href="/user/logout">Logout</a>
    </div>
  </div>

  <div id="container">



  <a href="/user/games/new" >Add New Game to Library</a>
  <div id="entryContainer">
    <% if (hasGames) { %>
      <% for (game of games) { %>
        <div class="entry">
          <p><%= game.title %></p>
          <div class="gameImage">
            <% if (typeof game.img != 'undefined') { %>
            <img src="<%= game.img %>" >
            <% } %>
            <% console.log(typeof game.title) %>
          </div>
        
          <a href="/user/games/edit/<%= game._id %>">Edit</a>
          <form action="/user/games/delete?_method=DELETE" method="post">
            <input type="submit" value="Remove from library">
            <input type="hidden" name="id" value="<%= game._id %>">
          </form>

        </div>
      <% } %>
    <% } %>
  </div>
  </div>  
  </body>
</html>